{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/**/*.**"],
  "exclude": ["dist"],
  "lib": ["es2015"],
  "paths": {
    "@/*": ["./src/*"]
  }
}
